<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:gravity="center_vertical">

    <View
        android:id="@+id/viewBreakLine"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="64dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="2dp"
        android:background="@color/colorSearchScreenBackground" />

    <ImageView
        android:id="@+id/imgLocationIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewBreakLine"
        android:layout_margin="10dp"
        android:background="@drawable/ic_marker_gray"
        android:contentDescription="@null" />

    <TextView
        android:layout_below="@id/viewBreakLine"
        android:id="@+id/tvLocationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/imgLocationIcon"
        android:layout_toRightOf="@id/imgLocationIcon"
        android:maxLines="1"
        android:textSize="@dimen/searchScreenTextSize"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvFormatAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvLocationName"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/imgLocationIcon"
        android:layout_toRightOf="@id/imgLocationIcon"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textSize="@dimen/searchScreenTextSize" />

</RelativeLayout>
